# Maintainer: megvadulthangya <megvadulthangya@gmail.com> 
pkgname=ttf-font-awesome-5
pkgver=5.15.4
pkgrel=1
pkgdesc="Iconic font designed for Bootstrap (version 5)"
arch=('any')
url="https://fontawesome.com"
license=('OFL' 'MIT')
depends=('fontconfig')
source=("https://github.com/FortAwesome/Font-Awesome/archive/\${pkgver}.tar.gz")
sha256sums=('121298fb331c34004ee07168f12c780d821f5048891980230d196e22d40f1989')

package() {
  cd "Font-Awesome-\${pkgver}"
  install -d "\${pkgdir}/usr/share/fonts/OTF"
  install -m644 otfs/*.otf "\${pkgdir}/usr/share/fonts/OTF/"
}
