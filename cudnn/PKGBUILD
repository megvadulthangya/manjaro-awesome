# Maintainer: Gyöngyösi Gábor  gabor at gshoots.hu

pkgname=cudnn
pkgver=9.17.1.4
_cudaver=13
pkgrel=1
pkgdesc="NVIDIA CUDA Deep Neural Network library"
arch=('x86_64')
url='https://developer.nvidia.com/cudnn'
license=('custom')
source=("https://developer.download.nvidia.com/compute/cudnn/redist/cudnn/linux-x86_64/cudnn-linux-x86_64-${pkgver}_cuda${_cudaver}-archive.tar.xz")
sha256sums=('ba1c895c328b274bff31ac0cd71d7d63ca3f1f070f7007aaff4cac012b971528')

package() {
  cd "cudnn-linux-x86_64-${pkgver}_cuda${_cudaver}-archive"
  mkdir -p "${pkgdir}/usr"
  cp -r include lib "${pkgdir}/usr"
  install -Dm644 LICENSE "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}
