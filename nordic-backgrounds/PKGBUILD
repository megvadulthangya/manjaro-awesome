# Maintainer: Gyöngyösi Gábor <gabor at gshoots dot hu>
pkgname=nordic-backgrounds
pkgver=r161.e6670ac
pkgrel=1
pkgdesc="Currated Nordic theme wallpapers"
arch=('any')
url="https://github.com/megvadulthangya/nordic-backgrounds"
license=('MIT')
makedepends=('git') # Git hozzáadva

# Tar.gz helyett git clone
source=("git+https://github.com/megvadulthangya/nordic-backgrounds.git")
sha256sums=('SKIP')

pkgver() {
  cd "$srcdir/nordic-backgrounds"
  # Formátum: r<commits>.<hash>
  printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

package() {
  # Git clone után a mappa neve simán a repo neve (nincs -master)
  cd "$srcdir/nordic-backgrounds"
  
  install -dm755 "$pkgdir/usr/share/backgrounds/nordic-backgrounds"
  cp -r wallpapers/* "$pkgdir/usr/share/backgrounds/nordic-backgrounds/"
}
