mkdir -p test-package
cat > test-package/PKGBUILD << 'EOF'
# Maintainer: Test User <test@example.com>
pkgname=test-package
pkgver=1.0.0
pkgrel=1
pkgdesc="Test package for post-build step"
arch=('any')
license=('MIT')
depends=()
source=()
md5sums=()

package() {
  echo "Test package" > "$pkgdir/test.txt"
}
EOF