# Maintainer: Gyöngyösi Gábor <gabor AT gshoots DOT hu>
pkgname=gghelper-git  # -git suffix ajánlott fejlesztői csomagokhoz
pkgver=r$(date +%Y%m%d).$(git ls-remote --heads origin main | cut -c1-7)
pkgrel=1
pkgdesc="Git workflow assistant with GitHub Actions conflict resolution (Git version)"
arch=('any')
url="https://github.com/megvadulthangya/gghelper"
license=('MIT')
depends=('python' 'git')
makedepends=('git')

# Közvetlenül a git repo-ból
source=("git+https://github.com/megvadulthangya/gghelper.git")
sha256sums=('SKIP')

# Verziószám a commit dátumából és hash-ből
pkgver() {
  cd "$srcdir/gghelper"
  printf "%s.%s" "$(git log -1 --format='%cd' --date=format:'%Y%m%d' HEAD)" \
  "$(git rev-parse --short HEAD)"
}

package() {
  cd "$srcdir/gghelper"
  
  # Create directories
  install -dm755 "$pkgdir/usr/bin"
  install -dm755 "$pkgdir/usr/share/gghelper"
  install -dm755 "$pkgdir/usr/share/licenses/$pkgname"
  install -dm755 "$pkgdir/usr/share/doc/$pkgname"
  
  # Install main script
  install -Dm755 gghelper.py "$pkgdir/usr/share/gghelper/gghelper.py"
  
  # Install bash wrapper
  install -Dm755 gghelper "$pkgdir/usr/bin/gghelper"
  
  # Install documentation
  install -Dm644 README.md "$pkgdir/usr/share/doc/$pkgname/README.md"
  
  # Install license
  install -Dm644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
  
  # Create symlink for direct Python execution
  ln -sf "/usr/share/gghelper/gghelper.py" "$pkgdir/usr/bin/gghelper.py"
}
