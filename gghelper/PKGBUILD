# Maintainer: Gyöngyösi Gábor <gabor AT gshoots DOT hu>
_pkgname=gghelper
pkgname=${_pkgname}
pkgver=2.1.3
pkgrel=1
pkgdesc="Git workflow assistant with GitHub Actions conflict resolution"
arch=('any')
url="https://github.com/megvadulthangya/gghelper"
license=('MIT')
depends=('python' 'git')
makedepends=('git')
provides=("${_pkgname}")
conflicts=("${_pkgname}")

# Git forrás - mindig a legújabbat szedi le
source=("git+https://github.com/megvadulthangya/gghelper.git")
sha256sums=('SKIP')

pkgver() {
  cd "$srcdir/$_pkgname"
  
  # Ha van git tag, akkor használjuk, különben commit szám + hash
  if git describe --tags 2>/dev/null | grep -q '.'; then
    # Tag formátum: v1.2.3 -> 1.2.3
    git describe --tags | sed 's/^v//;s/-/./g'
  else
    # Nincs tag: r123.abc1234 formátum
    printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
  fi
}

package() {
  cd "$srcdir/$_pkgname"
  
  # Könyvtárak létrehozása
  install -dm755 "$pkgdir/usr/bin"
  install -dm755 "$pkgdir/usr/share/$_pkgname"
  install -dm755 "$pkgdir/usr/share/licenses/$pkgname"
  install -dm755 "$pkgdir/usr/share/doc/$pkgname"
  
  # Fő szkript telepítése
  if [ -f "gghelper.py" ]; then
    install -Dm755 gghelper.py "$pkgdir/usr/share/$_pkgname/gghelper.py"
  fi
  
  # Wrapper script telepítése (ha létezik)
  if [ -f "gghelper" ] && [ -x "gghelper" ]; then
    install -Dm755 gghelper "$pkgdir/usr/bin/gghelper"
  else
    # Ha nincs wrapper, készítünk egyet
    cat > "$pkgdir/usr/bin/gghelper" << 'EOF'
#!/bin/bash
exec python /usr/share/gghelper/gghelper.py "$@"
EOF
    chmod 755 "$pkgdir/usr/bin/gghelper"
  fi
  
  # Symlink Python szkripthez
  ln -sf "/usr/share/$_pkgname/gghelper.py" "$pkgdir/usr/bin/gghelper.py"
  
  # Dokumentáció telepítése
  if [ -f "README.md" ]; then
    install -Dm644 README.md "$pkgdir/usr/share/doc/$pkgname/README.md"
  fi
  
  # LICENSE telepítése
  if [ -f "LICENSE" ]; then
    install -Dm644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
  fi
  
  # Egyéb fájlok (ha vannak)
  for file in *.txt *.rst *.md LICENSE* COPYING*; do
    if [ -f "$file" ] && [ "$file" != "README.md" ]; then
      install -Dm644 "$file" "$pkgdir/usr/share/doc/$pkgname/"
    fi
  done
  
  # .git mappa törlése (ha véletlenül benne maradt)
  rm -rf "$pkgdir/usr/share/$_pkgname/.git" 2>/dev/null || true
}
